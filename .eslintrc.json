{
  "extends": [
    "eslint:recommended",
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.app.json"]
  },
  "ignorePatterns": ["vite.config.ts", "dist"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
